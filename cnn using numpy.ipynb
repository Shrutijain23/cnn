   "metadata": {},
   "outputs": [],
   "source": [
    "#back propogation\n",
    "dA2 = - (np.divide(Y, A2) - np.divide(1 - Y, 1 - A2))\n",
    "s = 1/(1+np.exp(-Z2))\n",
    "dZ2 = dA2 * s * (1-s)\n",
    "dW2 = np.dot(A1.T,dZ2)\n",
    "db2 = (np.sum(dZ2, axis=0, keepdims=True)) \n",
    "dA1 = np.dot( dZ2,W2.T)\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 158,
