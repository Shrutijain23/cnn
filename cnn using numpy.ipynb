   "source": [
    "Z = Z1\n",
    "\n",
    "dZ1 = np.array(dA1, copy=True) \n",
    "dZ1[Z <= 0] = 0\n",
    "dW1 = np.dot(A_flatten.T,dZ1)\n",
    "db1 = (np.sum(dZ1, axis=0, keepdims=True)) \n",
    "dA_flatten = np.dot( dZ1,W1.T)\n",
    " "
   ]
  },
  {
   "cell_type": "code",
